{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "declaration": true,
    "isolatedModules": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "removeComments": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
